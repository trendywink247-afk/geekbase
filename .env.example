# ============================================================
# GeekSpace 2.0 — Environment Configuration
# Copy to .env and fill in your values
# ============================================================

# ---- Core (REQUIRED in production) ----
NODE_ENV=production
PORT=3001

# JWT signing secret — generate with: openssl rand -hex 64
JWT_SECRET=

# AES encryption key for API keys — generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# ---- Database ----
DB_PATH=/app/data/geekspace.db

# ---- CORS ----
# Comma-separated allowed origins
CORS_ORIGINS=https://yourdomain.com

# ---- Public URLs ----
PUBLIC_URL=https://yourdomain.com
API_URL=https://yourdomain.com/api

# ---- Ollama (local AI brain) ----
# If running Ollama on the host machine:
OLLAMA_BASE_URL=http://host.docker.internal:11434
# If running Ollama in Docker on the same network (by container name):
# OLLAMA_BASE_URL=http://ollama-xlvs-ollama-1:11434
OLLAMA_MODEL=qwen2.5-coder:1.5b
OLLAMA_TIMEOUT_MS=30000

# ---- OpenRouter (global AI brain — optional) ----
# Get your key at https://openrouter.ai/keys
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-sonnet-4-5-20250929

# ---- EDITH / OpenClaw gateway (Brain 3 — premium reasoning) ----
# The OpenClaw container's host-mapped port. Set this to enable
# automatic routing of complex/coding/planning queries to EDITH.
# In Docker: http://host.docker.internal:59259
# Direct:    http://localhost:59259
EDITH_GATEWAY_URL=http://host.docker.internal:59259
EDITH_TOKEN=
# RPC method name the bridge calls for chat (default: chat.completions):
OPENCLAW_CHAT_METHOD=chat.completions

# ---- Redis ----
REDIS_URL=redis://redis:6379

# ---- Telegram Bot (optional) ----
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=

# ---- Rate Limiting ----
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200
RATE_LIMIT_AUTH_MAX=10

# ---- Credits / Billing ----
PREMIUM_MONTHLY_CREDITS=50000
TRIAL_DAYS=3
TRIAL_PREMIUM_CREDITS=10000

# ---- Misc ----
JWT_EXPIRES_IN=7d
MAX_REQUEST_BODY_BYTES=1048576
LOG_LEVEL=info
SEED_DEMO_DATA=false
